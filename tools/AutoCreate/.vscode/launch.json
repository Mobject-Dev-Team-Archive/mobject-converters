{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with Nodemon",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run-script",
          "dev"
        ],
        "port": 9229,
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
